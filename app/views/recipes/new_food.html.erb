<%= form_with model: [@recipe, @food] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.label :measurement_unit, "Measurement unit" %>
    <%= f.text_field :measurement_unit, autofocus: true, autocomplete: "measurement_unit", class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price, autofocus: true, autocomplete: "price", class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, autofocus: true, autocomplete: "quantity", class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.submit "Create Food", class: 'btn btn-outline-dark btn-sm' %>
  </div>
<% end %>
