<br>
<h2 class="text-center">Add New Recipe</h2>
<br>
<%= form_with model: @recipe, url: recipes_path, local_scope: true do |f| %>
	<div>
		<%= f.label :status %>
		<%= f.select :status, %w[public private], selected: 'public'%>
	</div>
	<br>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
	</div>
	<br>
	<div>
		<%= f.label :cooking_time, "Cooking Time" %>
		<%= f.text_field :cooking_time, autofocus: true, autocomplete: 'cooking_time', class: 'form-control' %>
	</div>
	<br>
	<div>
		<%= f.label :preparation_time, "Preparation Time" %>
		<%= f.text_field :preparation_time, autofocus: true, autocomplete: 'preparation_time', class: 'form-control' %>
	</div>
	<br>
	<div>
		<%= f.label :Description %>
		<%= f.text_area :description, autofocus: true, autocomplete: 'description', class: 'form-control' %>
	</div>
	<br>
	<div>
		<%= f.submit class: 'btn btn-outline-dark btn-sm' %>
	</div>
<% end %>